#include "main.h"

/**
 * simple_print_buffer - prints buffer in hexa
 * @buffer: the address of memory to print
 * @size: the size of the memory to print
 *
 * Return: Nothing.
 */

char *create_array(unsigned int size, char c)
{
	if (!size)
	{
		return (NULL);
	}
	char *mem = malloc(size)
	{
		if (size > 0)
		{
			for (i = 0; i < size; i++)
			{
				mem[i] = c;
			}
		}
		else
			return (NULL);
	}
	return (*mem);
}
