#include "main.h"

ssize_t read_textfile(const char *filename, size_t letters)
{
	int fd = open(filename, O_RDONLY);, i = 0;


	if ((fd == -1) || (!filename))
	{
		return (0);
	}

	char *buf = malloc(letters + 1);

	read(fd, buf, letters);
	buf[letters + 1] = '\0';

	while (buf != '\0')
	{
		if ((write(1, buf[i], 1))
			i = i + 1;
		else
			return 0;
	}

}
