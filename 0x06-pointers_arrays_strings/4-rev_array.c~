#include <stdio.h>
#include <string.h>
#include "main.h"

/**
 * reverse_array- revers the values in the pointer
 * 
 * @a: pointer values to revers
 * @n : length of pointer
 * Return: 0
 */

void reverse_array(int *a, int n)
{
	int i, *j;

	j = malloc(n *sizeof(int));
	for (i = 0; i < n; i++)
	{
		j = a[n - i];
	}
	a = j;
	free(j);
}
